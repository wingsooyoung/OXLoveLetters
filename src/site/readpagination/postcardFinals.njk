---
layout: layouts/paginationbase.njk
pagination:
    data: approved-new-method
    size: 100
    alias: approved
permalink: "pages/readletters/page-{{ pagination.pageNumber + 1 }}/"
---

{%- for item in pagination.items -%}
    <div class="containerbox grid-item" onclick="modalZoom(this)">
        {% if (item.data.members == "Jaehan") or (item.data.members == "在汉") %}
            <img src="/assets/base/jaehanbase.svg" alt="" id="postcard">
        {% elseif item.data.members == 'Hwichan' %}
            <img src="/assets/base/hwichanbase.svg" alt="" id="postcard">
        {% elseif (item.data.members == "Sebin") or (item.data.members == "سيبين") %}
            <img src="/assets/base/sebinbase.svg" alt="" id="postcard">
        {% elseif (item.data.members == "Hangyeom") or (item.data.members == "هانجيوم") %}
            <img src="/assets/base/hangyeombase.svg" alt="" id="postcard">
        {% elseif item.data.members == 'Taedong' %}
            <img src="/assets/base/taedongbase.svg" alt="" id="postcard">
        {% elseif item.data.members == 'Xen' %}
            <img src="/assets/base/xenbase.svg" alt="" id="postcard">
        {% elseif item.data.members == 'Jehyun' %}
            <img src="/assets/base/jehyunbase.svg" alt="" id="postcard">
        {% elseif item.data.members == 'Kevin' %}
            <img src="/assets/base/kevinbase.svg" alt="" id="postcard">
        {% elseif (item.data.members == "Junghoon") or (item.data.members == "正勋") %}
            <img src="/assets/base/junghoonbase.svg" alt="" id="postcard">
        {% elseif item.data.members == 'Hyuk' %}
            <img src="/assets/base/hyukbase.svg" alt="" id="postcard">
        {% elseif (item.data.members == "Yechan") or (item.data.members == "叶蝉") or (item.data.members == "叶禅") %}
            <img src="/assets/base/yechanbase.svg" alt="" id="postcard">
        {% else %}
            <img src="/assets/small borders postcard.svg" alt="" id="postcard">
        {% endif %}
        <div id="contentbox" class="template">{{ item.data.lettercontent }}</div>

        {% if item.data.signature %}
        <div id="namebox" class="template">{{ item.data.nickname }}</div>
        {% else %}
        <div id="namebox" class="template">FOR X</div>
        {% endif %}
        {#{{ loop.revindex }}#}
        <div id="lettercount" class="template">{{ item.data.indexNum }}</div>

        <div id="membersbox" class="template" style="display: none">{% if item.data.members === ("Jaehan" or "在汉") %}Jaehan{% elseif item.data.members === 'Hwichan' %}Hwichan{% elseif item.data.members === ("Sebin" or "سيبين") %}Sebin{% elseif item.data.members === ("Hangyeom" or "هانجيوم") %}Hangyeom{% elseif item.data.members === 'Taedong' %}Taedong{% elseif item.data.members === 'Xen' %}Xen{% elseif item.data.members === 'Jehyun' %}Jehyun{% elseif item.data.members === 'Kevin' %}Kevin{% elseif item.data.members === ("Junghoon" or "正勋") %}Junghoon{% elseif item.data.members === 'Hyuk' %}Hyuk{% elseif item.data.members === ("Yechan" or "叶蝉" or "叶禅") %}Yechan{% else %}ALL{% endif %}</div>
    </div>
{% else %}

    <li>No letters to read at the moment.</li>

{%- endfor -%}


