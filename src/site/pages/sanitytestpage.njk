{% if sanityData.length > 0 %}
    {%- for data in sanityData -%}
        <div class="containerbox grid-item" onclick="modalZoom(this)">
            <img src="{{ data.design.url }}" alt="{{ data.altText }}" id="postcard">
            <div id="contentbox" class="template"> {{ data.letterMessage }} </div>
            <div id="namebox" class="template"> {{ data.letterFrom }} <p id="lettersigned">{{ data.letterSigned }}</p></div>
            <div id="lettercount" class="template"> {{ data._id }} </div>
            <div id="membersbox" class="template" style="display: none"> {{ data.letterTo }} </div>
        </div>
    {%- endfor -%}
{% else %}
    <div id="loading">The EleventyFetch method didn't work properly...</div>
{% endif %}



