        const myForm = event.target;
        const formData = new FormData(myForm);

        {#div#{{ loop.index0 }} > #contentbox .innerHTML#}

        {#div > #namebox .innerHTML#}

        let mess = CSS.escape(indexNumber);
        console.log(mess);

        formData.set('path', 'test');

        {% if true %}
            formData.set('signature','TRUE');
            formData.set('nickname', 'testagain');
        {% else %}
            formData.set('signature','FALSE');
            formData.set('nickname', 'FOR X');
        {% endif %}

        formData.set('lettercontent', 'testttt');

        fetch("/", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
