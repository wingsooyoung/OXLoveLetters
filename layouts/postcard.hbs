<!--layout: layouts/base.hbs-->
<!--pageClass: postcard-->
<!--templateEngineOverride: hbs(, md?)-->
<!--^eleventy.js code stuff-->


<h1>{{ title }}</h1>
<p class="date">
    Posted as an example, on <time datetime="{{ date }}"></time>
</p>
<main>
    {{ content }}
    <div class="footnote">
        <p>
            Feel free to comment on this page using the form below.
        </p>
    </div>
</main>
{# Unless we have disabled comments for this page, add a comments form #}
{% if commentsClosed != true %}
{% include "comment-form.njk" -%}
{% else %}
<div class="footnote">
    <p>
        comments on this page are now closed. Perhaps express your opinions about this <a href="https://twitter.com/intent/tweet?text=I%20need%20to%20tell%20the%20world%20about%20this!&url={{ init.rootURL }}{{ page.url }}">on twitter</a> instead?
    </p>
</div>
{% endif %}

<div class="comments">
    {# Add any comments we have stashed for this page #}
    {% include "comments.njk" -%}
    <li class="comment">
        <img class="avatar" src="{{ comment.avatar }}">
        <h3>{{ comment.name }}</h3>
        <div class="date">  made the following comment, <time>{{ comment.date | dateDisplay }}</time></div>
        <div class="comment-text">{{ comment.comment | markdown | safe}}</div>
    </li>
</div>
